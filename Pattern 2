    SOURCE CODE:

    #include <stdio.h>
int main() {
    // Write C code here
    int i,j,n;
    printf("n=");
    scanf("%d",&n);
    for(i=1;i<=n;i++){
        for(int k=i;k<=n-1;k++)
            printf(" ");
        for(j=1;j<=i;j++){
            printf("* ");
          
        }
       
        printf("\n");
    }
   for(i=n-1;i>=1;i--){
       for(int k=i;k<=n-1;k++)
       printf(" ");
       for(j=1;j<=i;j++)
       {
       printf("* ");
       }
       printf("\n");
   }
   
    return 0;
}

   
